---
interface Props {
	size?: "sm" | "md" | "lg";
}

const { size = "md" } = Astro.props;

const sizeClasses = {
	sm: "text-lg",
	md: "text-xl",
	lg: "text-2xl",
};
---

<span class:list={["font-bold tracking-tight", sizeClasses[size]]}>
	<span class="text-gray-900">Vanilla</span><span
		class="ml-0.5 rounded-md bg-amber-400 px-1.5 py-0.5 text-amber-900">JS</span
	>
</span>
