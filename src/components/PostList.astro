---
import FormattedDate from "./FormattedDate.astro";

const { data } = Astro.props;
---

<ul
	class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 xl:grid-cols-2 xl:gap-x-8"
>
	{
		data.map((post) => (
			<li class="group relative">
				<a href={`/blog/${post.id}`}>
					<picture>
						<img
							loading="lazy"
							decoding="async"
							transition:name={`post-image-${post.id}`}
							width="416"
							height="288"
							src={post.data.image.src}
							alt={post.data.image.alt}
							class="size-72 w-full rounded-lg bg-gray-100 object-cover transition-opacity duration-300 group-hover:opacity-80 max-sm:h-80 sm:aspect-2/1 lg:aspect-square"
						/>
					</picture>

					<div class="my-2 flex items-center gap-x-4 text-xs">
						<FormattedDate date={post.data.pubDate} />
					</div>

					<h3 class="text-2xl font-semibold text-gray-900 transition-colors group-hover:text-amber-700">
						<span class="absolute inset-0" />
						{post.data.title}
					</h3>
				</a>
			</li>
		))
	}
</ul>
